@model Karaoke_project.Models.Login

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="app">
    <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" >
        <div class="d-flex flex-column justify-content-between w-100 contentBG">
            <div class="container d-flex h-100">
                <div class="row align-items-center w-100">
                    <div class="col-md-7 col-lg-5 m-h-auto">
                        <div class="card shadow-lg">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between m-b-30">
                                    <img class="img-fluid" id="icon" src="https://th.bing.com/th/id/R.57c9cd52cdc5fd3cd1e3949d42912f21?rik=YWveODCOpBcWZQ&riu=http%3a%2f%2fblog.vso-software.fr%2fwp-content%2fuploads%2f2016%2f11%2fSnap7322.jpg&ehk=sZoqzn4pKogiwss1pvYByYi%2bSKjbnrPiBcx7b8a%2fEkA%3d&risl=&pid=ImgRaw&r=0&sres=1&sresct=1">
                                    <h2 class="m-b-0">Sign In</h2>
                                </div>
                                <form asp-action="Login">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold">Username:</label>
                                        <div class="input-affix">
                                            <i class="prefix-icon anticon anticon-user"></i>
                                            <input asp-for="Username" type="text" class="form-control" id="userName" placeholder="Username">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold">Password:</label>
                                        <div class="input-affix m-b-10">
                                            <i class="prefix-icon anticon anticon-lock"></i>
                                            <input asp-for="password" type="password" class="form-control" id="pwdInput" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <a class="" onclick="showPwd()"><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                            <button onclick="logIn()" class="btn btn-primary">Sign In</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none d-md-flex p-h-40 justify-content-between">
                <span class="">© karaoke project</span>
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <a class="text-dark text-link" href="">Legal</a>
                    </li>
                    <li class="list-inline-item">
                        <a class="text-dark text-link" href="">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function logIn() {
            var username = $("#userName").val();
            var password = $("#pwdInput").val();
            if (!username || !password) {
                error = "Vui lòng nhập đủ thông tin đăng nhập!"
                alertify.notify(error, "error", 7)
                return;
            }
        }
    </script>
}
