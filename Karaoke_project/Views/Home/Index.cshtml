@{
    ViewData["Title"] = "Home Page";
}

<!--Slider Component-->
<div class="container-fluid __slider">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100 __img-slider" src="~/image/image1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="w-100 __img-slider" src="~/image/image2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="w-100 __img-slider" src="~/image/image3.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--End Slider Component-->
<!--Content-->



<div class="container mt-5 __content">
    <div class="row mt-5">
        <div class="col-xl-6 col-md-6 col-sm-12">
            <img src="~/image/image1.jpg" class="d-block w-100" alt="">
        </div>
        <div class="col-xl-6 col-md-6 col-sm-12 align-self-center">
            <p> <b>Loại phòng: </b>Phòng Vip</p>
            <p> <b>Giá phòng: </b>65.000 VND / giờ</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-xl-6 col-md-6 col-sm-12 align-self-center">
            <p> <b>Loại phòng: </b>Phòng cao cấp </p>
            <p> <b>Giá phòng: </b>55.000 VND / giờ </p>
        </div>
        <div class="col-xl-6 col-md-6 col-sm-12">
            <img src="~/image/image2.jpg" class="d-block w-100" alt="">
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-xl-6 col-md-6 col-sm-12">
            <img src="~/image/image1.jpg" class="d-block w-100" alt="">
        </div>
        <div class="col-xl-6 col-md-6 col-sm-12 align-self-center">
            <p> <b>Loại phòng: </b>Phòng Thường  </p>
            <p> <b>Giá phòng: </b>45.000 VND / giờ </p>
        </div>
    </div>

</div>
<!--Menu-->
<div id="menu" class="container">
    <div class="row mt-3">
        <h3 class="mx-3 my-3">Thực đơn</h3>
        @foreach (Food foo in ViewData["foods"] as IEnumerable<Karaoke_project.Models.Food>)
        {
            <div class="col-xl-3 col-md-6 col-sm-12">
                <div class="card mb-3">
                    <img src="~/image/imageFood/@foo.Image" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@foo.Name</h5>
                        <p class="card-text">@String.Format("{0:0,0}", @foo.Price) VND</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
        
    </script>
}
<!--End Price Component-->
<!--End Content-->
