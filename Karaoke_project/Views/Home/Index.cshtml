@{
    ViewData["Title"] = "Home Page";
}

<!--Slider Component-->
<div class="container-fluid __slider">
    <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/image/image1.jpg" class="w-100 __img-slider" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/image/image2.jpg" class="w-100 __img-slider" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/image/image3.jpg" class="w-100 __img-slider" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!--End Slider Component-->
<!--Content-->

<div class="container mt-5 __content">

    <div class="row mt-5">
        <div class="col-xl-6 col-md-6 col-sm-12">
            <img src="~/image/image1.jpg" class="d-block w-100" alt="">
        </div>
        <div class="col-xl-6 col-md-6 col-sm-12 align-self-center">
            <p> <b>Loại phòng: Phòng Vip</b>  </p>
            <p> <b>Giá phòng: 65.000 VND / giờ</b> </p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-xl-6 col-md-6 col-sm-12 align-self-center">
            <p> <b>Loại phòng: Phòng cao cấp</b> </p>
            <p> <b>Giá phòng: 55.000 VND / giờ</b> </p>
        </div>
        <div class="col-xl-6 col-md-6 col-sm-12">
            <img src="~/image/image2.jpg" class="d-block w-100" alt="">
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-xl-6 col-md-6 col-sm-12">
            <img src="~/image/image1.jpg" class="d-block w-100" alt="">
        </div>
        <div class="col-xl-6 col-md-6 col-sm-12 align-self-center">
            <p> <b>Loại phòng: Phòng Thường</b>  </p>
            <p> <b>Giá phòng: 45.000 VND / giờ</b> </p>
        </div>
    </div>

</div>
<!--Menu-->
<div id="menu" class="container">
    <div class="row mt-3">
        <h3 class="mx-3 my-3">Thực đơn</h3>
        @foreach (Food foo in ViewData["foods"] as IEnumerable<Karaoke_project.Models.Food>)
        {
            <div class="col-xl-3 col-md-6 col-sm-12">
                <div class="card mb-3">
                    <img src="~/image/imageFood/@foo.Image" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@foo.Name</h5>
                        <p class="card-text">@String.Format("{0:0,0}", @foo.Price) VND</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
       
    </script>
}
<!--End Price Component-->
<!--End Content-->
